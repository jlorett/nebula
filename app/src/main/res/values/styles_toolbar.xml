<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.CollapsingToolbar.Collapsed</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
    </style>

    <style name="Widget.App.Picture.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Picture.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.CollapsingToolbar.Collapsed</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="ThemeOverlay.App.Picture.Toolbar" parent="">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableTint">@color/colorControlNormal</item>
    </style>
</resources>