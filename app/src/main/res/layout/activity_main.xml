<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:id="@+id/todayContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/today_picture_desc"/>

            <TextView
                android:id="@+id/pictureTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginTop="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_l"
                style="@style/AppTheme.TextView.Header"
                tools:text="@string/sample_title" />

            <TextView
                android:id="@+id/pictureDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_l"
                tools:text="@string/sample_description" />

            <TextView
                android:id="@+id/copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_l"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="Copyright - Test"/>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/videoLinkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today_video_btn_text"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="@dimen/space_l"
        android:contentDescription="@string/today_video_btn_desc"
        app:layout_anchor="@id/todayContainer"
        app:layout_anchorGravity="bottom|end"
        app:iconTint="@color/colorPrimaryDark"
        app:iconTintMode="src_in"
        app:icon="@drawable/ic_play_arrow_black_24dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
